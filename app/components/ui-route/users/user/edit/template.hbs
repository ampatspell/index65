{{#app-section}}
  {{app-row value=user.data.email}}
{{/app-section}}

{{#app-section}}
  {{#app-block}}
    {{#app-form action=(action 'save')}}
      {{app-input
          label=(l 'Name')
          value=user.data.name
          update=(action (mut user.data.name))
          disabled=user.isSaving
      }}
    {{/app-form}}
  {{/app-block}}
{{/app-section}}

{{#app-section}}
  {{#app-block}}
    {{app-button label=(l 'Update') disabled=user.isSaving action=(action 'save')}}
    {{app-button label=(l 'Cancel') disabled=user.isSaving action=(action 'cancel')}}
  {{/app-block}}
{{/app-section}}
